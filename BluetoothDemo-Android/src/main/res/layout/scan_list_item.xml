<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:layout_marginTop="15dp"
    android:padding="5dp" >

       <ImageView
        android:id="@+id/unpair_device_image_view"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
         android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_device_pedometer"
        tools:ignore="contentDescription" />
       
       <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/unpair_device_image_view"
        android:textColor="#000000"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="5dp"
        android:text="Broadcast:"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/unpair_device_image_view"
        android:layout_below="@id/name"
        android:textColor="#000000"
        android:text="Address:"
        android:textSize="12sp" />
    
    <TextView
        android:id="@+id/services"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/unpair_device_image_view"
        android:layout_below="@id/address"
        android:textColor="@android:color/holo_purple"
        android:text="Service:A500,FEE7"
        android:textSize="12sp" />
    
    <!-- android:src="@drawable/ic_rssi_bar" -->
    
    <TextView
        android:id="@+id/info_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@android:drawable/ic_menu_info_details"
        tools:ignore="contentDescription" />
    
    <TextView
        android:id="@+id/pairing_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:padding="5dp"
        android:text="pairing"
        android:visibility="gone" />

</RelativeLayout>